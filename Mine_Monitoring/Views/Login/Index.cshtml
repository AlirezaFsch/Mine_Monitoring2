@{
    ViewData["Title"] = "ورود";
}

<style>
    body {
        font-family: 'B Nazanin', serif; /* Use B Nazanin font if available */
        background-image: url("/images/backgroundimage.jpg"); /* Adjust the path to your background image */
        background-size: cover;
        background-position: center;
        margin: 0; /* Remove default margin */
        padding: 0; /* Remove default padding */
    }

    form {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
        background-color: #fff;
        margin: 0 auto;
        max-width: 350px;
    }

    h2 {
        text-align: center;
    }

    label {
        font-size: 16px;
        margin-bottom: 5px;
        display: flex;
        align-items: center;
    }

        label img {
            margin-right: 5px;
        }

    input {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 3px;
        font-size: 16px;
        width: 100%;
        margin-bottom: 15px;
    }

    button {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        background-color: #3498db; /* Classic blue */
        color: #fff;
        font-size: 16px;
        cursor: pointer;
    }

        button:hover {
            background-color: #2980b9; /* Slightly darker blue on hover */
        }
</style>

<h2>ورود</h2>

<form method="post" action="/Login/Authenticate">
    <div>
        <label for="username">
            <img src="/path/to/username_icon.png" alt="Username icon">:نام کاربری
        </label>
        <input type="text" id="username" name="username" required>
    </div>
    <div>
        <label for="password">
            <img src="/path/to/password_icon.png" alt="Password icon">:رمز عبور
        </label>
        <input type="password" id="password" name="password" required>
    </div>
    <button type="submit">ورود</button>
</form>
