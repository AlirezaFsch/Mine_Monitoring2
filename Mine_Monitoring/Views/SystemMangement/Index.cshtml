@model List<Mine_Monitoring.Models.SysUser>

    @{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>کاربران سیستم</h1>

<table class="table">
    <thead>
        <tr>
            <th>شناسه</th>
            <th>نام کامل</th>
            <th>نام کاربری</th>
            <th>ایمیل</th>
            <th>شماره تلفن</th>
            <th>نقش</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sysUser in Model)
        {
            <tr>
                <td>@sysUser.Id</td>
                <td>@sysUser.FullName</td>
                <td>@sysUser.Username</td>
                <td>@sysUser.Email</td>
                <td>@sysUser.PhoneNumber</td>
                <td>@sysUser.Role</td>
            </tr>
        }
    </tbody>
</table>
