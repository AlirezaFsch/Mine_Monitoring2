@model Mine_Monitoring.Models.SMSMessage

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Send SMS</h1>

<form asp-action="Send" method="post">
    <div class="form-group">
        <label for="userId">Select User:</label>
        <select class="form-control" id="userId" name="userId">
            @foreach (var user in ViewBag.Users)
            {
                <option value="@user.Id">@user.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="smsTypeId">Select SMS Type:</label>
        <select class="form-control" id="smsTypeId" name="smsTypeId">
            @foreach (var smsType in ViewBag.SMSTypes)
            {
                <option value="@smsType.Id">@smsType.TypeName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="message">Message:</label>
        <textarea class="form-control" id="message" name="message" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send SMS</button>
</form>
